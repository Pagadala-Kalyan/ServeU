<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <!-- HORIZONTAL WRAPPER FOR ACCENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- ðŸŽ¨ EMERGENCY TYPE ACCENT (FIXES ERROR) -->
        <View
            android:id="@+id/typeAccent"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="#2563EB"/>

        <!-- CONTENT -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ðŸš¨ EMERGENCY TYPE -->
            <TextView
                android:id="@+id/tvEmergencyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Type"
                android:textColor="#2563EB"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <!-- ðŸ“± USER PHONE -->
            <TextView
                android:id="@+id/tvUserPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Phone"
                android:textColor="#0F172A"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="6dp"/>

            <!-- ðŸš¨ EMERGENCY CONTACT -->
            <TextView
                android:id="@+id/tvEmergencyContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Contact"
                android:textColor="#334155"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- ðŸ“ LOCATION -->
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#334155"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- ðŸ•’ TIME -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="#64748B"
                android:textSize="13sp"
                android:layout_marginTop="6dp"/>

            <!-- DIVIDER -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7EB"
                android:layout_marginVertical="12dp"/>

            <!-- ðŸ—‘ RESOLVE BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Resolve"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="14dp"
                app:backgroundTint="#DC2626"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
